@model IEnumerable<Two_tables_mvc.Models.Category>

@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditCategories", new { id = item.CategoryId }) |
        @Html.ActionLink("Details", "DetailsCategory", new { id = item.CategoryId }) |
        @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryId })
    </td>
</tr>
}

</table>
